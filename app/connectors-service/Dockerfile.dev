FROM python:3.13-alpine3.20

RUN apk update && apk add --no-cache \
    postgresql-dev \
    gcc \
    musl-dev \
    libffi-dev \
    curl \
    ca-certificates

WORKDIR /app
ENV PYTHONPATH=/app

RUN curl -LsSf https://astral.sh/uv/install.sh | sh

ENV PATH="/root/.local/bin:$PATH"

COPY pyproject.toml uv.lock /app/

RUN uv sync

COPY . /app

EXPOSE 8000

CMD ["uv", "run", "main.py"]
